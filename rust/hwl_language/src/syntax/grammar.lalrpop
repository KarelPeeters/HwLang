pub FileItems: Vec<Item> = {
    Item*,
}

// items
Item: Item = {
    <start:@L> "import" <parents:Spanned<(<Id> ".")+>> <entry:Spanned<ImportFinalKind>> ";" <end:@R>
        => Item::Import(ItemImport { parents, entry, span: ctx.span(start, end) }),

    <decl:Spanned<CommonDeclaration<Vis>>>
        => Item::CommonDeclaration(decl),

    <start:@L>
        // TODO make ports optional
        <vis:Vis> "module" <id:MaybeId>
        <params:(<Parameters>)?>
        <ports:ModulePorts>
        <body:Block<ModuleStatement>>
    <end:@R> => {
        Item::ModuleInternal(ItemDefModuleInternal { vis, id, params, ports, body, span: ctx.span(start, end) })
    },
    <start:@L>
        <vis:Vis> <span_ext:Span<"external">> "module" <id:Id>
        <params:(<Parameters>)?>
        <ports:ModulePorts>
    <end:@R> => {
        Item::ModuleExternal(ItemDefModuleExternal { vis, span_ext, id, params, ports, span: ctx.span(start, end) })
    },

    <start:@L>
        <vis:Vis> "interface" <id:MaybeId> <params:Parameters?> <start_body:@L>
        "{" <body:ExtraListWithBlockWithDecl<InterfacePortType, InterfaceView>> "}"
    <end:@R> => {
        let inter = ItemDefInterface {
            vis, id, params, body,
            span_body: ctx.span(start_body, end), span: ctx.span(start, end)
        };
        Item::Interface(inter)
    }
}

