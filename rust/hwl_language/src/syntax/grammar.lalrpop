AssignOp: Spanned<Option<AssignBinaryOp>> = Spanned<AssignOpInner>;

AssignOpInner: Option<AssignBinaryOp> = {
    "=" => None,
    "+=" => Some(AssignBinaryOp::Add),
    "-=" => Some(AssignBinaryOp::Sub),
    "*=" => Some(AssignBinaryOp::Mul),
    "/=" => Some(AssignBinaryOp::Div),
    "%=" => Some(AssignBinaryOp::Mod),
    "&=" => Some(AssignBinaryOp::BitAnd),
    "|=" => Some(AssignBinaryOp::BitOr),
    "^=" => Some(AssignBinaryOp::BitXor),
}

// utilities
Separated<T, S>: Vec<T> = {
    <v:(<T> S)*> <e:T?> => {
        let mut v = v;
        if let Some(e) = e {
            v.push(e);
        }
        v
    }
}

SeparatedAtLeastOneSep<T, S>: Vec<T> = {
    <mut v:(<T> S)+> <e:T?> => match e {
        None => v,
        Some(e) => {
            v.push(e);
            v
        }
    }
}

// Matches nothing, useful to skip branches in generic macros.
#[inline]
Never<T>: T = {}

#[inline]
Box<T>: Box<T> = {
    T => Box::new(<>),
}

#[inline]
BoxSpanned<T>: Box<Spanned<T>> = Box<Spanned<T>>;

#[inline]
Spanned<T>: Spanned<T> = {
    <start:@L> <inner:T> <end:@R> => Spanned { inner, span: ctx.span(start, end) },
}

#[inline]
Span<T>: Span = {
    <start:@L> <inner:T> <end:@R> => ctx.span(start, end),
}
