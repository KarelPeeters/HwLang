}

Parameter: Parameter = {
    <id:Id> ":" <ty:Expr> => Parameter { id, ty },
}

ModulePorts: Vec<ConditionalItem<ModulePortItem>> = Separated<ConditionalItem<ModulePortItem>, ",">;

ModulePortItem: ModulePortItem = {
