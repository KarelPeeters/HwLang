    <start:@L> <domain:Spanned<DomainKind>> <ports:BlockSeparated<ConditionalItem<ModulePortInBlock>, ",">> <end:@R>
        => ModulePortItem::Block(ModulePortBlock { domain, ports, span: loc.span(start, end) }),
